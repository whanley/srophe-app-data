            <listPerson>
                <person xml:id="saint-1093" ana="#syriaca-saint">
                    <persName xml:id="name1093-2" xml:lang="en" resp="http://syriaca.org" srophe:tags="#syriaca-headword">Abai</persName>
                    <persName xml:id="name1093-3" xml:lang="fr-x-fiey" source="#bib1093-1">ĀBĀÏ</persName>
                    <idno type="URI">http://syriaca.org/person/1093</idno>
                    <idno type="FIEY">4</idno>
                    <sex value="M" source="#bib1093-1">male</sex>
                    <floruit source="#bib1093-1" notBefore="0335" syriaca-computed-start="0335" notAfter="0385" syriaca-computed-end="0385">335-385</floruit>
                    <state type="martyr" source="#bib1093-1">
                        <p>Martyr</p>
                    </state>
                    <note xml:lang="en" type="abstract" xml:id="abstract-en-1093">In hagiography: Abai was a Persian Martyr
          killed by his father, <persName>Adorpirozgerd</persName>, who later converted to
          Christianity. He was mentioned in the legend of <persName ref="http://syriaca.org/person/1436">Saba Pirgushnasp</persName>. He was martyred with
          his mother <persName ref="http://syriaca.org/person/1274">Astina (Hwarta)</persName> and
          5000 friends.</note>
                    <event type="veneration" source="#bib1093-1">
                        <desc>The saint is venerated on 1 or 2 October.</desc>
                    </event>
                    <event type="attestation" xml:id="attestation1093-1" source="">
                        <p xml:lang="en">
                            <persName ref="http://syriaca.org/person/1093">Abai</persName> is commemorated in <title ref="http://syriaca.org/work/806">Abi (text) — </title>.</p>
                    </event>
                    <bibl xml:id="bib1093-1">
                        <title level="m" xml:lang="fr">Saints Syriaques</title>
                        <title level="a" xml:lang="fr">ĀBĀÏ</title>
                        <ptr target="http://syriaca.org/bibl/650"/>
                        <citedRange unit="entry">4</citedRange>
                    </bibl>
                    <bibl xml:id="bib1093-2">
                        <note xml:lang="en">Acts of these martyrs are contained in a MS in the Library of the Syrian Orthodox patriarchate as described in </note>
                        <author>
                            <persName>
                                <surname>Barsaum</surname>
                            </persName>
                        </author>
                        <title>Lu'lu</title>
                        <ptr target="http://syriaca.org/bibl/1386"/>
                        <citedRange>177</citedRange>
                    </bibl>
                    <bibl xml:id="bib1093-3">
                        <note xml:lang="en">Acts of these martyrs are contained in MS Sachau 241 in Berlin</note>
                        <author>
                            <persName>
                                <surname>Sachau</surname>
                            </persName>
                        </author>
                        <title>Catalogue</title>
